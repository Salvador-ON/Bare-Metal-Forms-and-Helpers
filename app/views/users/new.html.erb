
<%= form_for @user do |f| %>

  <% @user.errors.full_messages.each do |error| %>
  <h3><%= error %></h3>
  <% end %>
<p>
  <%= f.label :username, :value => "your user here:" %> <br/>
  <%= f.text_field :username, :placeholder => "your name" %>
</p>
<p>
  <%= f.label :email, :value => "your email here:" %> <br/>
  <%= f.text_field :email, :placeholder => "example@email.com" %>
</p>
<p>
  <%= f.label :password, :value => "your password here:" %> <br/>
  <%= f.password_field :password %>
</p>
<p><%= f.submit %></p>
<% end %>

